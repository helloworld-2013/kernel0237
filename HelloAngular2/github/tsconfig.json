{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts",
    "typings/browser/",
    "typings/browser.d.ts",
    "typings/*.d.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}